            <field name="category_id" ref="hr_payroll.GROSS"/>
            <field name="struct_id" ref="full_time_employee"/>
            <field name="amount_python_compute">
try:
    result = ABSDED
except:
    result = 0.00
try:
    result+=OTHERDED
except:
    pass
result += categories.BASIC
result += categories.ALW
            </field>
